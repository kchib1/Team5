<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/user_image1"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_logo_1" />

    <ImageButton
        android:id="@+id/add_user_image1"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="addfamilymem"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_user_logo" />

    <TextView
        android:id="@+id/user_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="User 1"
        app:layout_constraintEnd_toEndOf="@+id/user_image1"
        app:layout_constraintStart_toStartOf="@+id/user_image1"
        app:layout_constraintTop_toBottomOf="@+id/user_image1" />

    <TextView
        android:id="@+id/add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Add User"
        app:layout_constraintEnd_toEndOf="@+id/add_user_image1"
        app:layout_constraintStart_toStartOf="@+id/add_user_image1"
        app:layout_constraintTop_toBottomOf="@+id/add_user_image1" />
</androidx.constraintlayout.widget.ConstraintLayout>